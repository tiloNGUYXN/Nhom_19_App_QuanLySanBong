<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFieldName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/field_name"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFieldStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_available"
                android:textColor="@color/green"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvFieldType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-a-side"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvFieldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200,000 VND"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/field_details"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/book_field"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>